<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.review.mapper.ReviewMapper">
 <select id="selectReviewListByMtIdUserId" parameterType="int">
 	SELECT
 		`id`
		, `mtId`
		, `userId`
		, `content`
		, `imagePath`
		, `createdAt`
		, `updatedAt`
	FROM
		`review`
	WHERE
		`mtId` = #{mtId}
		`userId` = #{userId}
	ORDER BY `id` DESC
 </select>
 <insert id="insertReview" parameterType="map">
 	INSERT INTO `review`
 	(
 		`mtId`
		, `userId`
		, `content`
		, `imagePath`
		, `createdAt`
		, `updatedAt`
 	)
 	VALUES
 	(
 		#{mtId}
 		, #{userId}
 		, #{content}
 		, #{imagePath}
 		, NOW()
 		, NOW()
 	)
 </insert>
 </mapper>