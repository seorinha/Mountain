<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.project.mountain.mapper.MountainMapper">
 <select id="selectMountainByMtId" parameterType="map" resultType="com.project.mountain.domain.Mountain">
 	SELECT
		`id`
		, `mtName`
		, `mtMap`
		, `mtLocation`
		, `mtHeight`
		, `mtReason`
		, `upMin`
		, `downMin`
		, `difficulty`
		, `createdAt`
		, `updatedAt`
	FROM
		`mountain`
	WHERE
		`id` = #{mtId}
 </select>
 </mapper>